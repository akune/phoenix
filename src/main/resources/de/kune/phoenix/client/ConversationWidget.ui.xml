<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  <g:HTMLPanel addStyleNames="panel panel-default full conversation hide-on-phone">
    <div class="panel-heading">
      <g:InlineHTML ui:field="backToConversationsClickArea"
        addStyleNames="back-to-conversations glyphicon glyphicon-menu-left" />
      <g:InlineHTML ui:field="title">Unknown</g:InlineHTML>
    </div>
    <g:HTMLPanel ui:field="messageAreaPanel" addStyleNames="panel-body message-area">
    </g:HTMLPanel>
    <div class="panel-footer sticky-footer">
      <div class="input-group">
        <g:TextBox ui:field="messageTextBox" addStyleNames="form-control conversation-input" />
        <span class="input-group-btn">
          <g:Button ui:field="sendButton" addStyleNames="btn btn-default send disabled">Send</g:Button>
        </span>
      </div>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
