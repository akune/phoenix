<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:p='urn:import:de.kune.phoenix.client'>
  <g:HTMLPanel addStyleNames="input-group">
    <g:TextBox ui:field="textBox" enabled="false"
      addStyleNames="form-control" />
    <g:HTMLPanel addStyleNames="input-group-btn" tag="span" ui:field="buttonGroupPanel">
      <g:Button ui:field="editButton" addStyleNames="btn btn-default 
          update">
        <span class="glyphicon glyphicon-edit"></span>
      </g:Button>
      <g:Button ui:field="cancelEditButton" addStyleNames="btn btn-default 
        update">
        <span class="glyphicon glyphicon glyphicon-remove-circle"></span>
      </g:Button>
      <g:Button ui:field="saveButton" addStyleNames="btn btn-default 
        update">
        <span class="glyphicon glyphicon glyphicon-ok-circle"></span>
      </g:Button>
    </g:HTMLPanel>
  </g:HTMLPanel>
</ui:UiBinder>
